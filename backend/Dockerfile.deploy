# =============================================================================
# AgriSense RAG-Only Deployment Image
# =============================================================================
# Lightweight variant: RAG agent + weather only (no TF, YOLO, OpenCV)
# Expected image size: ~1.5 GB  |  Runtime RAM: ~800 MBâ€“1 GB
# =============================================================================
FROM python:3.11-slim

WORKDIR /app

# Minimal system deps (no libgl for OpenCV, no heavy ML libs)
RUN apt-get update && apt-get install -y --no-install-recommends \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

# Copy lightweight requirements
COPY requirements-deploy.txt .

RUN pip install --upgrade pip

# Install remaining deps
RUN pip install --no-cache-dir --timeout=1000 -r requirements-deploy.txt

# Copy only runtime code required for RAG-only mode
COPY main.py .
COPY rag_agent.py .
COPY markdown_rag_pipeline.py .
COPY vector_store_manager.py .
COPY weather_service.py .
COPY app ./app

# Keep minimal KB fallback data (used if vector_store volume is empty)
# Copy the markdown knowledge base â€” these files MUST be in the image for
# the auto-rebuild to work on Azure (where the vector_store mount may be empty).
COPY Web_Scraping_for_Agrisense/rag_pipeline/processed/markdown_kb ./Web_Scraping_for_Agrisense/rag_pipeline/processed/markdown_kb

# Verify KB files made it into the image (fail fast if .dockerignore blocked them)
RUN kb_count=$(find Web_Scraping_for_Agrisense/rag_pipeline/processed/markdown_kb -name '*.md' 2>/dev/null | wc -l) \
    && echo "ðŸ“š Markdown KB files in image: $kb_count" \
    && if [ "$kb_count" -eq 0 ]; then \
         echo "âŒ FATAL: No .md files found in markdown_kb â€” check .dockerignore patterns" && exit 1; \
       fi

# Optional fallback RAG JSON. Some workflows don't check this file into the repo
# so create an empty placeholder inside the image if it's not present in context.
RUN mkdir -p Web_Scraping_for_Agrisense/rag_pipeline/processed/rag_json \
    && if [ -f Web_Scraping_for_Agrisense/rag_pipeline/processed/rag_json/rag_documents.json ]; then \
         echo "using provided rag_documents.json"; \
       else \
         echo "{}" > Web_Scraping_for_Agrisense/rag_pipeline/processed/rag_json/rag_documents.json; \
       fi

# Force RAG-only mode
ENV DEPLOY_MODE=rag_only
ENV RAG_ENABLE_RERANKING=false
ENV RAG_EMBEDDINGS_PROVIDER=fastembed
ENV RAG_FASTEMBED_MODEL=BAAI/bge-small-en-v1.5
ENV PYTHONUNBUFFERED=1

EXPOSE 8000

# Faster startup check since no TF/YOLO to load
HEALTHCHECK --interval=15s --timeout=10s --start-period=120s --retries=8 \
  CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8000/health', timeout=5)" || exit 1

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
